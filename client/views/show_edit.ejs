        <a class="a"  href='/login'>LOGIN</a>&nbsp;&nbsp;&nbsp;

    </div>
<!-- END OF HEAD SECTION-->


<!-- BEGIN DASHBOX-->

    <div class="dashbox">

    <h1>HERE IS THE DASHBOX</h1>
    
    </div>

<!-- END DASHBOX -->

<!-- BEGIN MAIN BOX HERE -->
<div class="main">

<!-- BEGIN FORM BOX -->

<div class ="show_form_box">

<h1>EDIT YOUR ANIMAL HERE</h1>

<form method='post' action='/edit'>
    <h1>Name:<input class="input" type='text' placeholder="name" name='name'></h1>
    <h1>Type:<input class="input" type='text' placeholder="type" name='type'></h1>
    <h1>Personality:<input class="input:" type='text' placeholder="personality" name='personality'></h1>
    <h1><input class="BTN" type="submit"  value="submit"></h1>
</form>


</div>
<!-- END FORM BOX -->


<!-- BEGIN SHOW ONE BOX HERE -->
<div class="show_one_box">
<h1>SHOW UPDATE HERE</h1> 

   <br><h2>Here are Animal Stats:</h2>
    
        <h3>ID:<%= show_animals._id %></h3>
        <h3>Name: <%= show_animals.name %></h3>
        <h4>Type: <%= show_animals.type %></h4>
        <h4>Personality: <%= show_animals.personality %></h4>
        <hr>
    
</div>
<!-- END SHOW ONE BOX -->

</div>
<!-- END MAIN BOX Here -->

